{% extends 'base.html.twig' %}

{% block title %}Hello FermeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% block contenu %}
{% for item in fermes %}
<div class="example-wrapper">
    <p>{{item.nom}},{{item.ville}}</p>
    <button><a href="/update/{{item.id}}">Modifier</a></button>
     <button class="btn"><a href="/delete/{{item.id}}">REMOVE</a></button>
</div>
{% endfor %}
<a href="{{ path('app_poulet_fermier') }}">Nouveau</a>
{% endblock %}
{% endblock %}
